//program to check if a number is positive negavive or zero
public class NegPosOrZero {
    
    public static void posNegZero(integer num){
        
        if(num == 0){
            system.debug('Number is zero.');
        }
        else if(num>0){
            system.debug('Number is positive.');
        }
        else{
            system.debug('Number is negative.');
        }
    }

}
